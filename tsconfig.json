{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@domain/*": ["./src/domain/*"],
      "@errors/*": ["./src/errors/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@migrations/*": ["./src/migrations/*"],
      "@providers/*": ["./src/providers/*"],
      "@useCases/*": ["./src/useCases/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "src",
    "src/**/*.ts",
    "@types/**/*.d.ts",],
  "exclude": [
    "src/**/*.test.ts",
    "src/providers/HashProvider/mocks/**/*",
    "src/providers/*/mocks/**/*"
  ]
}
